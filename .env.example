# ============================================================================
# Blockchain Web3 Specialist Framework - Environment Configuration
# ============================================================================
#
# This file contains all environment variables needed for the framework.
# Copy this file to .env and fill in your actual values.
#
# Security Notes:
# - NEVER commit .env to git (already in .gitignore)
# - Keep your private keys and API keys secure
# - Use different credentials for mainnet vs testnet
# - Rotate credentials regularly
#
# ============================================================================

# ============================================================================
# 1. RPC PROVIDERS (Required)
# ============================================================================
#
# Get free RPC endpoints from:
# - Alchemy: https://www.alchemy.com/
# - Infura: https://infura.io/
# - QuickNode: https://www.quicknode.com/
#

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Ethereum Testnets (Optional - for testing)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
GOERLI_RPC_URL=https://eth-goerli.g.alchemy.com/v2/YOUR_API_KEY

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
POLYGON_MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY

# Arbitrum
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ARBITRUM_GOERLI_RPC_URL=https://arb-goerli.g.alchemy.com/v2/YOUR_API_KEY

# Optimism
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY
OPTIMISM_GOERLI_RPC_URL=https://opt-goerli.g.alchemy.com/v2/YOUR_API_KEY

# Base
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_GOERLI_RPC_URL=https://base-goerli.g.alchemy.com/v2/YOUR_API_KEY

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com

# ============================================================================
# 2. BLOCK EXPLORER API KEYS (Optional - for auto-fetching source code)
# ============================================================================
#
# Get API keys from:
# - Etherscan: https://etherscan.io/apis
# - Polygonscan: https://polygonscan.com/apis
# - Arbiscan: https://arbiscan.io/apis
#

# Etherscan (Ethereum)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Polygonscan (Polygon)
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY

# Arbiscan (Arbitrum)
ARBISCAN_API_KEY=YOUR_ARBISCAN_API_KEY

# Optimistic Etherscan (Optimism)
OPTIMISTIC_ETHERSCAN_API_KEY=YOUR_OPTIMISTIC_ETHERSCAN_API_KEY

# Basescan (Base)
BASESCAN_API_KEY=YOUR_BASESCAN_API_KEY

# ============================================================================
# 3. SIMULATION & TESTING SERVICES (Optional)
# ============================================================================
#
# Tenderly - Advanced transaction simulation
# Sign up: https://tenderly.co/
#
TENDERLY_API_KEY=YOUR_TENDERLY_API_KEY
TENDERLY_PROJECT=YOUR_TENDERLY_PROJECT_ID
TENDERLY_ACCOUNT=YOUR_TENDERLY_ACCOUNT

# ============================================================================
# 4. PRICE DATA SOURCES (Optional - for PriceOracle)
# ============================================================================
#
# These are mostly free APIs, but you may need keys for higher rate limits
#

# CoinGecko (Free tier available)
# Sign up: https://www.coingecko.com/en/api
COINGECKO_API_KEY=YOUR_COINGECKO_API_KEY

# CoinMarketCap
# Sign up: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=YOUR_COINMARKETCAP_API_KEY

# ============================================================================
# 5. WALLET CONFIGURATION (Security Critical)
# ============================================================================
#
# WARNING: NEVER commit actual private keys!
# Use different keys for mainnet and testnet
# Consider using hardware wallets for mainnet operations
#

# Default password for encrypting wallet keys in memory
# This is used by WalletManager to encrypt private keys with AES-256-GCM
WALLET_ENCRYPTION_PASSWORD=your-secure-password-here-change-this

# For testing only - DO NOT use on mainnet
# Leave empty in production - keys should be imported at runtime
TEST_PRIVATE_KEY_ETH=
TEST_PRIVATE_KEY_SOLANA=

# ============================================================================
# 6. MCP SERVER CONFIGURATION
# ============================================================================

# Default chain for operations
DEFAULT_CHAIN=ethereum

# RPC retry configuration
RPC_MAX_RETRIES=3
RPC_RETRY_DELAY=1000

# Rate limiting (requests per second)
RPC_RATE_LIMIT=10

# Transaction confirmation requirements
ETHEREUM_CONFIRMATIONS=12
POLYGON_CONFIRMATIONS=128
ARBITRUM_CONFIRMATIONS=20
OPTIMISM_CONFIRMATIONS=20

# Gas price limits (in gwei) - prevents accidental high-gas transactions
MAX_GAS_PRICE=500
MIN_PRIORITY_FEE=0.1

# ============================================================================
# 7. AGENT CONFIGURATION
# ============================================================================

# Maximum concurrent tasks per agent
AGENT_MAX_CONCURRENT_TASKS=10

# Default task timeout (milliseconds)
AGENT_DEFAULT_TIMEOUT=30000

# Orchestrator coordination strategy
# Options: sequential | parallel | adaptive
ORCHESTRATOR_STRATEGY=adaptive

# Maximum number of agents in orchestrator
ORCHESTRATOR_MAX_AGENTS=50

# ============================================================================
# 8. LOGGING & MONITORING
# ============================================================================

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Enable debug mode (shows more detailed logs)
DEBUG=false

# Log file location (optional - logs to console if not set)
LOG_FILE=./logs/framework.log

# Enable performance metrics
ENABLE_METRICS=false

# ============================================================================
# 9. SECURITY SETTINGS
# ============================================================================

# Enable security validation before transactions
ENABLE_SECURITY_VALIDATION=true

# Enable contract analysis before interactions
ENABLE_CONTRACT_ANALYSIS=true

# Enable transaction simulation before sending
ENABLE_TRANSACTION_SIMULATION=true

# Malicious contract database update frequency (hours)
MALICIOUS_DB_UPDATE_FREQUENCY=24

# ============================================================================
# 10. DEVELOPMENT & TESTING
# ============================================================================

# Node environment
NODE_ENV=development

# Enable test mode (uses testnets, mocked data)
TEST_MODE=true

# Local blockchain nodes (for testing)
HARDHAT_RPC_URL=http://127.0.0.1:8545
SOLANA_TEST_VALIDATOR_URL=http://127.0.0.1:8899

# Enable mock external services (for testing without API keys)
MOCK_TENDERLY=false
MOCK_ETHERSCAN=false
MOCK_PRICE_ORACLES=false

# ============================================================================
# 11. CACHE CONFIGURATION
# ============================================================================

# Enable caching
ENABLE_CACHE=true

# Cache TTL (seconds)
CACHE_TTL=300

# Price oracle cache TTL (seconds)
PRICE_CACHE_TTL=60

# Contract analysis cache TTL (seconds)
ANALYSIS_CACHE_TTL=3600

# ============================================================================
# 12. DEX & DeFi CONFIGURATION (Optional)
# ============================================================================

# Uniswap V2/V3 configuration
UNISWAP_V2_ROUTER=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D
UNISWAP_V3_ROUTER=0xE592427A0AEce92De3Edee1F18E0157C05861564

# SushiSwap configuration
SUSHISWAP_ROUTER=0xd9e1cE17f2641f24aE83637ab66a2cca9C378B9F

# Slippage tolerance (percentage, 0.5 = 0.5%)
DEFAULT_SLIPPAGE_TOLERANCE=0.5

# MEV protection (use Flashbots)
ENABLE_MEV_PROTECTION=false
FLASHBOTS_RPC_URL=https://rpc.flashbots.net

# ============================================================================
# 13. NFT CONFIGURATION (Optional)
# ============================================================================

# IPFS gateway for metadata
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Pinata (IPFS pinning service)
PINATA_API_KEY=
PINATA_SECRET_KEY=

# NFT metadata storage
NFT_METADATA_STORAGE=ipfs

# ============================================================================
# NOTES
# ============================================================================
#
# 1. Required vs Optional:
#    - Required: RPC URLs for chains you want to use
#    - Optional: Everything else can be added as needed
#
# 2. Getting Started Minimal Config:
#    - ETHEREUM_RPC_URL (get free from Alchemy)
#    - WALLET_ENCRYPTION_PASSWORD (set a secure password)
#    - That's it! Everything else is optional
#
# 3. For Testing:
#    - Set TEST_MODE=true
#    - Use testnet RPC URLs
#    - Use test private keys (NOT mainnet keys)
#
# 4. For Production:
#    - Set NODE_ENV=production
#    - Set TEST_MODE=false
#    - Use mainnet RPC URLs
#    - NEVER put private keys in .env (import at runtime)
#    - Enable all security features
#
# 5. External Services Timeline:
#    - Can start without: Tenderly, Etherscan, price APIs
#    - Add later when needed: Just fill in the API keys
#    - Framework will gracefully fallback if services unavailable
#
# ============================================================================
